// LCARS Container

.{prefix}app-container
  // background black
  // margin base-spacing
  display flex
  flex-direction column
  width calc(100% - 10px)
  max-width calc(100% - 10px)
  height 100%
  max-height 100%
  margin-left 10px
  overflow hidden

  > .left-menu
    height 100%

  > .header
    background-color black
    width 'calc(100% - %s)' % (double-spacing * 2)
    top 0
    left double-spacing
    padding-top double-spacing
    margin-bottom base-spacing
    z-index 1

  > .footer
    background-color black
    bottom 0
    left double-spacing
    padding-bottom double-spacing
    width 'calc(100% - %s)' % (double-spacing * 2)
    z-index 1

  > .container
    margin-top base-spacing
    margin-left base-spacing
    padding-left elbow-column-spacing + base-width
    padding-top (base-height * 3/2)
    padding-bottom (base-height * 3/2)
    width 100%
    height 100%
    overflow auto
